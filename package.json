{
    "name": "angular-boilerplate",
    "version": "1.0.0",
    "description": "",
    "scripts": {
        "start": "parallelshell 'npm run watch' 'npm test'",
        "test": "karma start karma.conf.js",
        "css:build": "node-sass --output-style compressed scss/index.scss | postcss --use autoprefixer >  www/css/application.min.css",
        "css:watch": "gacher -p 'scss/*.scss js/app/components/**/*.scss' -c 'npm run css:build'",
        "js:build:app": "uglifyjs `find js/app/ -name '*.js' ! -path '**/spec/*' | sort` -o www/js/application.min.js",
        "js:lint:app": "eslint --format 'node_modules/eslint-friendly-formatter' js/app; if [[ $? -eq 0 ]]; then npm run js:build:app; fi",
        "js:build:libs": "browserify js/libs.js | uglifyjs -o www/js/libs.min.js",
        "js:watch:app": "gacher -p 'js/app/**/*.js' -c 'npm run js:lint:app'",
        "js:watch:libs": "gacher -p 'js/libs.js' -c 'npm run js:build:libs'",
        "js:watch": "parallelshell 'npm run js:watch:app' 'npm run js:watch:libs'",
        "angular:watch": "gacher -p 'js/**/*.html' -c 'npm run angular:template'",
        "angular:template": "n-embed -m 'boilerplate-templates' -s js app/**/*.html | uglifyjs -o www/js/templates.min.js",
        "browser:sync": "browser-sync start --server www/ --files 'www/**/*'",
        "img:watch": "gacher -p 'img/**/*' -c 'npm run img:build'",
        "img:build": "imagemin img/**/* www/img",
        "watch": "parallelshell 'npm run css:watch' 'npm run js:watch' 'npm run angular:watch' 'npm run img:watch' 'npm run browser:sync'"
    },
    "devDependencies": {
        "angular-mocks": "^1.4.5",
        "autoprefixer": "^6.0.2",
        "browser-sync": "^2.9.3",
        "browserify": "^11.1.0",
        "eslint": "^1.3.1",
        "eslint-friendly-formatter": "^1.2.2",
        "gacher": "^1.1.1",
        "jasmine-core": "^2.3.4",
        "karma": "^0.13.9",
        "karma-chrome-launcher": "^0.2.0",
        "karma-jasmine": "^0.3.6",
        "karma-mocha-reporter": "^1.1.1",
        "node-sass": "^3.3.2",
        "npm-build-tools": "^2.2.1",
        "parallelshell": "^2.0.0",
        "postcss-cli": "^2.1.0",
        "uglifyjs": "^2.4.10"
    },
    "dependencies": {
        "angular": "^1.4.5",
        "angular-ui-router": "^0.2.15",
        "jquery": "^2.1.4",
        "moment": "^2.10.6"
    }
}
